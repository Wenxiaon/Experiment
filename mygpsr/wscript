# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('mygpsr', ['location-service', 'internet', 'wifi', 'applications', 'mesh', 'point-to-point', 'virtual-net-device'])
    module.source = [
        'model/mygpsr-ptable.cc',
        'model/mygpsr-rqueue.cc',
        'model/mygpsr-packet.cc',
        'model/mygpsr.cc',
        'helper/mygpsr-helper.cc',
        ]

    headers = bld(features=['ns3header'])
    headers.module = 'mygpsr'
    headers.source = [
        'model/mygpsr-ptable.h',
        'model/mygpsr-rqueue.h',
        'model/mygpsr-packet.h',
        'model/mygpsr.h',
        'helper/mygpsr-helper.h',
        ]

    
    # bld.ns3_python_bindings()

